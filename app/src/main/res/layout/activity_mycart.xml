<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

<ImageView
    android:id="@+id/cartIV"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:background="@drawable/banner"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/appbar"
    android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/cartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cartIV"
        app:layout_constraintTop_toTopOf="@+id/cartIV"
        android:layout_marginTop="5dp"
        android:text="Laptop"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/celias_medium"/>
    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cartIV"
        app:layout_constraintTop_toBottomOf="@+id/cartName"
        android:layout_marginTop="5dp"
        android:text="₹ 1000"
        android:fontFamily="@font/celias_medium"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/plusButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/cartPrice"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:text="+"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/countTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/plusButton"
        app:layout_constraintBottom_toBottomOf="@+id/plusButton"
        app:layout_constraintRight_toLeftOf="@+id/plusButton"
        android:text="5"
        android:layout_marginRight="10dp"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/minusButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/plusButton"
        app:layout_constraintBottom_toBottomOf="@+id/plusButton"
        app:layout_constraintRight_toLeftOf="@+id/countTV"
        android:layout_marginRight="10dp"
        android:text="-"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/cartIVv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartIV"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/cartNamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cartIVv"
        app:layout_constraintTop_toTopOf="@+id/cartIVv"
        android:layout_marginTop="5dp"
        android:text="Laptop"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/celias_medium"/>
    <TextView
        android:id="@+id/cartPricee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cartIVv"
        app:layout_constraintTop_toBottomOf="@+id/cartNamee"
        android:layout_marginTop="5dp"
        android:text="₹ 1000"
        android:fontFamily="@font/celias_medium"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/plusButtonn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/cartPricee"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:text="+"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/countTVv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/plusButtonn"
        app:layout_constraintBottom_toBottomOf="@+id/plusButtonn"
        app:layout_constraintRight_toLeftOf="@+id/plusButtonn"
        android:text="5"
        android:layout_marginRight="10dp"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/minusButtonn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/plusButtonn"
        app:layout_constraintBottom_toBottomOf="@+id/plusButtonn"
        app:layout_constraintRight_toLeftOf="@+id/countTVv"
        android:layout_marginRight="10dp"
        android:text="-"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/proceedtopay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"
        android:text="Proceed to pay"/>

</android.support.constraint.ConstraintLayout>