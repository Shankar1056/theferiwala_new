<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical"
	android:paddingEnd="@dimen/thin"
	android:paddingStart="@dimen/thin"
	tools:ignore="MissingPrefix">

	<com.makeramen.roundedimageview.RoundedImageView
		android:id="@+id/iv_image"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:scaleType="center"
		app:riv_border_color="@color/white"
		app:riv_border_width="@dimen/tiny"/>

	<TextView
		android:id="@+id/tv_title"
		fontPath="@string/font_medium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/thin"
		android:ems="7"
		android:gravity="center"
		android:padding="@dimen/thin"
		android:textColor="@color/grey_750"
		android:textSize="@dimen/text_very_small"
		tools:text="All Category"/>

</LinearLayout>